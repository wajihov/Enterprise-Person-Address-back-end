<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet id="2" author="wajih">
        <createTable tableName="personnel">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="personnel_pk" />
            </column>
            <column name="name" type="varchar(100)"/>
            <column name="last_name" type="varchar(100)"/>
            <column name="post" type="varchar(100)"/>
            <column name="adresse_id" type="int"/>
            <column name="enterprise_id" type="bigint">
                <constraints foreignKeyName="fk_personnel_entreprise" referencedTableName="enterprise" referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>