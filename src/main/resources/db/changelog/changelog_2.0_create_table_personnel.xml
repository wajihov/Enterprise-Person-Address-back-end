<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet id="2" author="wajih">
        <createTable tableName="personnel">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="personnel_pk"/>
            </column>
            <column name="name" type="varchar(100)"/>
            <column name="last_name" type="varchar(100)"/>
            <column name="post" type="varchar(100)"/>
            <column name="adresse_id" type="bigint">
                <constraints nullable="true"/>
            </column>
            <column name="entreprise_id" type="bigint">
                <constraints nullable="true"/>
            </column>
        </createTable>


    </changeSet>

</databaseChangeLog>